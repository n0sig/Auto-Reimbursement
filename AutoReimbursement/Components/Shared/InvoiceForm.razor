@using AutoReimbursement.Data
@using AutoReimbursement.Services
@using Microsoft.AspNetCore.Components.Forms
@inject IInvoiceStorageService StorageService
@inject IInvoiceLLMService LLMService
@inject ILogger<InvoiceForm> Logger

<div class="card">
    <div class="card-header">
        <button class="btn btn-link text-decoration-none w-100 text-start d-flex justify-content-between align-items-center p-0" 
                type="button" 
                @onclick="ToggleCollapse">
            <h3 class="mb-0">@(EditMode ? "Edit Invoice" : "Add Invoice")</h3>
            <span class="bi @(isCollapsed ? "bi-chevron-down" : "bi-chevron-up")"></span>
        </button>
    </div>
    <div class="card-body @(isCollapsed ? "d-none" : "")">
        <EditForm Model="Model" OnValidSubmit="HandleSubmit" FormName="@FormName">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-2" />
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger py-2 px-3 mb-2">@errorMessage</div>
            }

            @if (isProcessingPdf)
            {
                <div class="alert alert-info py-2 px-3 mb-2">
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    Processing PDF...
                </div>
            }

            <div class="row g-2">
                <div class="col-sm-6 col-lg-4">
                    <div class="form-floating">
                        <InputText @bind-Value="Model.SerialNumber" class="form-control" placeholder="Serial Number" />
                        <label>Serial Number</label>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="form-floating">
                        <InputDate @bind-Value="Model.Date" class="form-control" />
                        <label>Date</label>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-4">
                    <div class="form-floating">
                        <InputSelect @bind-Value="Model.PayerId" class="form-control">
                            <option value="">-- Select Payer --</option>
                            @if (AvailablePayers != null)
                            {
                                @foreach (var payer in AvailablePayers)
                                {
                                    <option value="@payer.Id">@payer.UserName</option>
                                }
                            }
                        </InputSelect>
                        <label>Payer *</label>
                        <ValidationMessage For="() => Model.PayerId" />
                    </div>
                </div>
            </div>

            <div class="row g-2">
                <div class="col-sm-6">
                    <div class="form-floating">
                        <InputSelect @bind-Value="Model.Type" class="form-control">
                            <option value="">-- Select Type --</option>
                            <option value="Material">Material</option>
                            <option value="Travel">Travel</option>
                            <option value="Others">Others</option>
                        </InputSelect>
                        <label>Type *</label>
                        <ValidationMessage For="() => Model.Type" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-floating">
                        <InputNumber @bind-Value="Model.Amount" class="form-control" placeholder="Amount" />
                        <label>Amount *</label>
                        <ValidationMessage For="() => Model.Amount" />
                    </div>
                </div>
            </div>

            <div class="form-floating">
                <InputText @bind-Value="Model.Description" class="form-control" placeholder="Description" />
                <label>Description</label>
            </div>

            <!-- PDF Upload Section -->
            <div class="pdf-upload-section">
                <label class="form-label fw-semibold">Upload PDF Invoice</label>
                <InputFile OnChange="HandlePdfUpload" accept=".pdf" class="form-control" disabled="@isProcessingPdf" />
                <small class="form-text text-muted d-block">Upload a PDF to auto-extract invoice details</small>
                @if (!string.IsNullOrEmpty(Model.PdfFileName))
                {
                    <div class="mt-1">
                        <span class="badge bg-success"><i class="bi bi-file-pdf"></i> @Model.PdfFileName</span>
                    </div>
                }
            </div>

            <!-- Invoice Items Section -->
            <div class="invoice-items-section">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0 fw-semibold">Invoice Items</h5>
                    <button type="button" class="btn btn-sm btn-primary" @onclick="AddInvoiceItem">
                        <i class="bi bi-plus-circle"></i> Add Item
                    </button>
                </div>

                @if (Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Name *</th>
                                    <th>Spec</th>
                                    <th>Unit</th>
                                    <th>Qty</th>
                                    <th>Price (No Tax) *</th>
                                    <th>Tax *</th>
                                    <th>Total</th>
                                    <th style="width: 60px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Items.Count; i++)
                                {
                                    var index = i;
                                    var item = Model.Items[index];
                                    <tr>
                                        <td>
                                            <InputText @bind-Value="item.Name" class="form-control form-control-sm" />
                                        </td>
                                        <td>
                                            <InputText @bind-Value="item.Specification" class="form-control form-control-sm" />
                                        </td>
                                        <td>
                                            <InputText @bind-Value="item.Unit" class="form-control form-control-sm" />
                                        </td>
                                        <td>
                                            <InputNumber @bind-Value="item.Quantity" class="form-control form-control-sm" />
                                        </td>
                                        <td>
                                            <InputNumber @bind-Value="item.Pretax" class="form-control form-control-sm" />
                                        </td>
                                        <td>
                                            <InputNumber @bind-Value="item.Tax" class="form-control form-control-sm" />
                                        </td>
                                        <td class="text-end fw-semibold">
                                            @((item.Pretax + item.Tax).ToString("N2"))
                                        </td>
                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-danger" @onclick="() => RemoveInvoiceItem(index)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="6" class="text-end">Total Amount:</th>
                                    <th class="text-end fw-bold">$@CalculateTotalAmount().ToString("N2")</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info py-2 px-3">No items added yet. Click "Add Item" to start.</div>
                }
            </div>

            <div class="d-flex flex-wrap gap-2 mt-3">
                <button type="submit" class="btn btn-success" disabled="@isProcessingPdf">
                    <i class="bi bi-check-circle"></i> @(EditMode ? "Update Invoice" : "Add Invoice")
                </button>
                @if (OnCancel.HasDelegate)
                {
                    <button type="button" class="btn btn-secondary" @onclick="OnCancel">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                }
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public InvoiceFormModel Model { get; set; } = new();

    [Parameter]
    public EventCallback<InvoiceFormModel> OnSubmit { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public bool EditMode { get; set; } = false;

    [Parameter]
    public string FormName { get; set; } = "invoiceForm";

    [Parameter]
    public List<ApplicationUser>? AvailablePayers { get; set; }

    private bool isProcessingPdf = false;
    private string? errorMessage;
    private bool isCollapsed = true;

    private void ToggleCollapse()
    {
        isCollapsed = !isCollapsed;
    }

    private void AddInvoiceItem()
    {
        Model.Items.Add(new InvoiceItemModel
        {
            Name = "",
            Pretax = 0,
            Tax = 0
        });
    }

    private void RemoveInvoiceItem(int index)
    {
        if (index >= 0 && index < Model.Items.Count)
        {
            Model.Items.RemoveAt(index);
        }
    }

    private decimal CalculateTotalAmount()
    {
        return Model.Items.Sum(i => i.Pretax + i.Tax);
    }

    private async Task HandlePdfUpload(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        isProcessingPdf = true;

        try
        {
            var file = e.File;
            
            if (file.ContentType != "application/pdf")
            {
                errorMessage = "Please upload a PDF file.";
                return;
            }

            // Store the PDF
            await using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB limit
            var pdfPath = await StorageService.StorePdfAsync(stream, file.Name);
            Model.PdfFilePath = pdfPath;
            Model.PdfFileName = file.Name;

            // Extract data using LLM
            var extractedData = await LLMService.ExtractInvoiceDataAsync(pdfPath);

            // Auto-fill fields
            if (!string.IsNullOrEmpty(extractedData.Serial))
                Model.SerialNumber = extractedData.Serial;
            
            if (extractedData.Date.HasValue)
                Model.Date = extractedData.Date.Value;
            
            Model.Amount = extractedData.Amount;

            // Clear existing items and add extracted items
            Model.Items.Clear();
            foreach (var item in extractedData.Items)
            {
                Model.Items.Add(new InvoiceItemModel
                {
                    Name = item.Name,
                    Specification = item.Specification,
                    Unit = item.Unit,
                    Quantity = item.Quantity,
                    Pretax = item.Pretax,
                    Tax = item.Tax
                });
            }

            Logger.LogInformation("PDF processed and data extracted successfully");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error processing PDF: {ex.Message}";
            Logger.LogError(ex, "Error processing PDF");
        }
        finally
        {
            isProcessingPdf = false;
        }
    }

    private async Task HandleSubmit()
    {
        // If amount not manually set, calculate from items
        if (Model.Amount == 0 && Model.Items.Any())
        {
            Model.Amount = CalculateTotalAmount();
        }
        
        if (OnSubmit.HasDelegate)
        {
            await OnSubmit.InvokeAsync(Model);
        }
    }

    public class InvoiceFormModel
    {
        public string? SerialNumber { get; set; }

        [StringLength(500)]
        public string? Description { get; set; }

        [Required]
        [Range(0.01, double.MaxValue, ErrorMessage = "Amount must be greater than 0")]
        public decimal Amount { get; set; }

        public DateTime? Date { get; set; }

        [Required(ErrorMessage = "Type is required")]
        public string Type { get; set; } = "";

        public string? PdfFilePath { get; set; }
        public string? PdfFileName { get; set; }

        [Required(ErrorMessage = "Payer is required")]
        public string PayerId { get; set; } = "";

        public List<InvoiceItemModel> Items { get; set; } = new();
    }

    public class InvoiceItemModel
    {
        [Required]
        [StringLength(200)]
        public string Name { get; set; } = "";

        [StringLength(200)]
        public string? Specification { get; set; }

        [StringLength(50)]
        public string? Unit { get; set; }

        public decimal? Quantity { get; set; }

        [Required]
        public decimal Pretax { get; set; }

        [Required]
        public decimal Tax { get; set; }
    }
}
