@page "/user-management"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using AutoReimbursement.Data
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject ILogger<UserManagement> Logger
@rendermode InteractiveServer

@attribute [Authorize]

<PageTitle>User Management</PageTitle>

<h1>User Management</h1>

@if (!isAuthorized)
{
    <div class="alert alert-danger">
        <h4>Access Denied</h4>
        <p>You must be an administrator to access this page.</p>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert alert-info">@statusMessage</div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <h3>Add New User</h3>
            <EditForm Model="newUserModel" OnValidSubmit="CreateUser" FormName="createUser">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />
                
                <div class="form-floating mb-3">
                    <InputText @bind-Value="newUserModel.Username" class="form-control" placeholder="username" />
                    <label>Username</label>
                    <ValidationMessage For="() => newUserModel.Username" />
                </div>
                
                <div class="form-floating mb-3">
                    <InputText type="password" @bind-Value="newUserModel.Password" class="form-control" placeholder="password" />
                    <label>Password</label>
                    <ValidationMessage For="() => newUserModel.Password" />
                </div>
                
                <div class="form-check mb-3">
                    <InputCheckbox @bind-Value="newUserModel.IsAdministrator" class="form-check-input" id="isAdmin" />
                    <label class="form-check-label" for="isAdmin">
                        Administrator
                    </label>
                </div>
                
                <button type="submit" class="btn btn-primary">Create User</button>
            </EditForm>
        </div>
    </div>

    <hr />

    <h3>Existing Users</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th style="width: 250px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@(user.IsAdministrator ? "Administrator" : "User")</td>
                    <td>
                        @if (user.Id != currentUserId)
                        {
                            <button class="btn btn-sm btn-warning me-2" @onclick="() => ShowResetPasswordDialog(user.Id, user.UserName!)">Reset Password</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user.Id)">Delete</button>
                        }
                        else
                        {
                            <span class="text-muted">(Current User)</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (showResetPasswordDialog)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Reset Password for @resetPasswordUsername</h5>
                        <button type="button" class="btn-close" @onclick="CancelResetPassword"></button>
                    </div>
                    <EditForm Model="resetPasswordModel" OnValidSubmit="ResetUserPassword" FormName="resetPassword">
                        <DataAnnotationsValidator />
                        <div class="modal-body">
                            <ValidationSummary class="text-danger" />
                            <div class="form-floating mb-3">
                                <InputText type="password" @bind-Value="resetPasswordModel.NewPassword" class="form-control" placeholder="New password" />
                                <label>New Password</label>
                                <ValidationMessage For="() => resetPasswordModel.NewPassword" />
                            </div>
                            <div class="form-floating mb-3">
                                <InputText type="password" @bind-Value="resetPasswordModel.ConfirmPassword" class="form-control" placeholder="Confirm password" />
                                <label>Confirm Password</label>
                                <ValidationMessage For="() => resetPasswordModel.ConfirmPassword" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CancelResetPassword">Cancel</button>
                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
}

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private bool isAuthorized = false;
    private string? currentUserId;
    private List<ApplicationUser> users = new();
    private string? statusMessage;
    private string? errorMessage;
    private bool showResetPasswordDialog = false;
    private string? resetPasswordUserId;
    private string? resetPasswordUsername;

    [SupplyParameterFromForm]
    private NewUserModel newUserModel { get; set; } = new();

    [SupplyParameterFromForm]
    private ResetPasswordModel resetPasswordModel { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthenticationStateTask != null)
        {
            var authState = await AuthenticationStateTask;
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var currentUser = await UserManager.GetUserAsync(user);
                if (currentUser != null)
                {
                    currentUserId = currentUser.Id;
                    isAuthorized = currentUser.IsAdministrator;
                    
                    if (isAuthorized)
                    {
                        await LoadUsers();
                    }
                }
            }
        }
    }

    private Task LoadUsers()
    {
        users = UserManager.Users.ToList();
        return Task.CompletedTask;
    }

    private async Task CreateUser()
    {
        try
        {
            var user = new ApplicationUser
            {
                UserName = newUserModel.Username,
                Email = newUserModel.Username, // Set email same as username for compatibility
                EmailConfirmed = true,
                IsAdministrator = newUserModel.IsAdministrator
            };

            var result = await UserManager.CreateAsync(user, newUserModel.Password);

            if (result.Succeeded)
            {
                statusMessage = $"User {newUserModel.Username} created successfully.";
                errorMessage = null;
                newUserModel = new NewUserModel();
                await LoadUsers();
                Logger.LogInformation("User {Username} created by administrator", user.UserName);
            }
            else
            {
                errorMessage = $"Error creating user: {string.Join(", ", result.Errors.Select(e => e.Description))}";
                statusMessage = null;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            statusMessage = null;
            Logger.LogError(ex, "Error creating user");
        }
    }

    private async Task DeleteUser(string userId)
    {
        try
        {
            var user = await UserManager.FindByIdAsync(userId);
            if (user != null)
            {
                var result = await UserManager.DeleteAsync(user);
                if (result.Succeeded)
                {
                    statusMessage = $"User {user.UserName} deleted successfully.";
                    errorMessage = null;
                    await LoadUsers();
                    Logger.LogInformation("User {Username} deleted by administrator", user.UserName);
                }
                else
                {
                    errorMessage = $"Error deleting user: {string.Join(", ", result.Errors.Select(e => e.Description))}";
                    statusMessage = null;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            statusMessage = null;
            Logger.LogError(ex, "Error deleting user");
        }
    }

    private void ShowResetPasswordDialog(string userId, string username)
    {
        resetPasswordUserId = userId;
        resetPasswordUsername = username;
        resetPasswordModel = new ResetPasswordModel();
        showResetPasswordDialog = true;
        statusMessage = null;
        errorMessage = null;
    }

    private void CancelResetPassword()
    {
        showResetPasswordDialog = false;
        resetPasswordUserId = null;
        resetPasswordUsername = null;
        resetPasswordModel = new ResetPasswordModel();
    }

    private async Task ResetUserPassword()
    {
        try
        {
            if (string.IsNullOrEmpty(resetPasswordUserId))
            {
                errorMessage = "User not found.";
                return;
            }

            var user = await UserManager.FindByIdAsync(resetPasswordUserId);
            if (user != null)
            {
                // Remove existing password and set new one
                var removePasswordResult = await UserManager.RemovePasswordAsync(user);
                if (!removePasswordResult.Succeeded)
                {
                    errorMessage = $"Error resetting password: {string.Join(", ", removePasswordResult.Errors.Select(e => e.Description))}";
                    return;
                }

                var addPasswordResult = await UserManager.AddPasswordAsync(user, resetPasswordModel.NewPassword);
                if (addPasswordResult.Succeeded)
                {
                    statusMessage = $"Password for user {user.UserName} has been reset successfully.";
                    errorMessage = null;
                    showResetPasswordDialog = false;
                    Logger.LogInformation("Administrator reset password for user {Username}", user.UserName);
                }
                else
                {
                    errorMessage = $"Error setting new password: {string.Join(", ", addPasswordResult.Errors.Select(e => e.Description))}";
                }
            }
            else
            {
                errorMessage = "User not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Logger.LogError(ex, "Error resetting user password");
        }
    }

    public class NewUserModel
    {
        [Required]
        public string Username { get; set; } = "";

        [Required]
        [StringLength(100, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        public bool IsAdministrator { get; set; } = false;
    }

    public class ResetPasswordModel
    {
        [Required]
        [StringLength(100, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string NewPassword { get; set; } = "";

        [DataType(DataType.Password)]
        [Compare("NewPassword", ErrorMessage = "The new password and confirmation password do not match.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
